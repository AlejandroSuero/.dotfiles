# Layouts: bsp, stack or float
yabai -m config layout bsp

# Named spaces
yabai -m space 1 --label terminal
yabai -m space 2 --label web
yabai -m space 3 --label sims
yabai -m space 4 --label art
yabai -m space 5 --label music

# vertical: right, horizontal: bottom
yabai -m config window_placement second_child

# window padding
yabai -m config window_gap 10
yabai -m config top_padding 50
yabai -m config bottom_padding 10
yabai -m config right_padding 10
yabai -m config left_padding 10

# mouse settings

# change mouse focus to focussing window
yabai -m config mouse_follows_focus on

# Disabled apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^Color UI$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^DBngin$" manage=off
yabai -m rule --add app="^Install$" manage=off
yabai -m rule --add app="^App Store$" manage=off
